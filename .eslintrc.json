{
	"env": {
		"es2021": true,
		"node": true,
		"sourceType": "module"
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "never"],
		"eqeqeq": "error",
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_"
			}
		]
	}
}
